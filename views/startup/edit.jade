table
  tr
    td Name:
    td
      input(type="text", name="name", ng-model="toEdit.name", ng-disabled="commiting")
    td
  tr
    td Website:
    td
      input(type="text", name="website", ng-model="toEdit.website", ng-disabled="commiting")
    td
  tr
    td Banner Photo:
    td
      input(type="text", name="bannerPhoto", ng-model="toEdit.bannerPhoto", ng-disabled="commiting")
    td
  tr
    td Founders:
    td
      table
        tr(ng-repeat="founder in toEdit.founders track by $index")
          td
            input(type="text", ng-model="toEdit.founders[$index]", ng-disabled="commiting")
          td
            button(ng-click="deleteFounder($index)", ng-disabled="commiting")
              | Delete
        tr
          td
            button(ng-click="addFounder()", ng-disabled="commiting")
              | Add Founder
          td
     td
      
