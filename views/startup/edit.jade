        tr(ng-repeat="industry in toEdit.industries track by $index")
          td
            input(type="text", ng-model="toEdit.industries[$index]", ng-disabled="commiting")
          td
            button(ng-click="deleteIndustry($index)", ng-disabled="commiting")
              | Delete
        tr
          td
            button(ng-click="addIndustry()", ng-disabled="commiting")
              | Add Industry
          td
    td
  tr
    td Email Address:
    td
      input(type="text", name="email", ng-model="toEdit.email", ng-disabled="commiting")
    td
  tr
    td Mission:
    td
      textarea(name="mission", ng-model="toEdit.mission", ng-disabled="commiting")
    td
  tr
    td Stage:
    td
      input(type="text", name="stage", ng-model="toEdit.stage", ng-disabled="commiting")
    td
  tr
    td Location:
    td
      input(type="text", name="location", ng-model="toEdit.location", ng-disabled="commiting")
    td
  tr
    td Phone Number:
    td
      input(type="text", name="phone", ng-model="toEdit.phone", ng-disabled="commiting")
    td
  tr
    td Media: 
    td
      input(type="text", name="media", ng-model="toEdit.media", ng-disabled="commiting")
    td
  tr
    td Details:
    td
      textarea(name="details", ng-model="toEdit.details", ng-disabled="commiting")
    td
  tr
    td Related Startups: 
    td
      table
        tr(ng-repeat="related in toEdit.relatedStartups track by $index")
          td
            input(type="text", ng-model="toEdit.relatedStartups[$index]", ng-disabled="commiting")
          td
            button(ng-click="deleteRelatedStartup($index)", ng-disabled="commiting")
